{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "unpublished.nattlua",
  "runOnSave.statusMessageTimeout": 3000,
  "runOnSave.onlyRunOnManualSave": true,
  "runOnSave.defaultRunIn": "terminal",
  "runOnSave.commands": [
    {
      "globMatch": "**/*.{lua,nlua}",
      "command": "cd ${workspaceFolder} && luajit .vscode/on_editor_save.lua '${file}'",
      "runIn": "terminal"
    }
  ]
}
